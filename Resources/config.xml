			<name>caching</name>
			<label lang="de">Caching aktivieren</label>
			<label lang="en">Caching aktiv</label>
			<value>true</value>
			<options>
				<position>53</position>
			</options>
		</element>

		<element type="number">
			<name>cachetime</name>
			<label lang="de">Cachezeit</label>
			<label lang="en">Cachetime</label>
			<value>43200</value>
			<options>
				<position>54</position>
			</options>
		</element>
		
