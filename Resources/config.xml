			<label lang="de">Position Herstellertext</label>
            <label lang="en">Position manufacturer text</label>
			<value>aboveListing</value>
			<description lang="de">Hier können Sie entscheiden, wo die Herstellerinformationen dargestellt werden sollen.</description>
			<description lang="en">Here you can decide where the manufacturer information should be displayed.</description>
            <store>
				<option>
					<value>aboveListing</value>
					<label lang="de">Über dem Listing</label>
					<label lang="en">About the listing</label>
				</option>
				<option>
					<value>belowListing</value>
					<label lang="de">Unter dem Listing</label>
					<label lang="en">Under the listing</label>
				</option>
			</store>
			<options>
				<position>35</position>
				<editable>false</editable>
			</options>
        </element>
		
		<element type="select" scope="shop">
            <name>productBoxLayout</name>
			<label lang="de">Produkt Layout</label>
            <label lang="en">Product layout</label>
			<value>basic</value>
