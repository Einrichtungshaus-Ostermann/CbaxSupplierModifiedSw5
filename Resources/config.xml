				<option>
					<value>basic</value>
					<label lang="de">Detaillierte Informationen</label>
					<label lang="en">Detailed information</label>
				</option>
				<option>
					<value>minimal</value>
					<label lang="de">Nur wichtige Informationen</label>
					<label lang="en">Only important information</label>
				</option>
				<option>
					<value>image</value>
					<label lang="de">Großes Bild</label>
					<label lang="en">big picture</label>
				</option>
			</store>
			<options>
				<position>36</position>
				<editable>false</editable>
			</options>
